@model EFC.Data.Actor

@section css {
    <style>
        body {
            color: white;
        }
    </style>
}

<div class="text-center fw-bolder shadow">
    <h2 class="fw-bold ">Edit Actor</h2>
</div>
<hr>

<div class="blurred-bg text-white fw-bold">

        <div class="text-center">
            <img src="~/img/@Model.ActorImg" class="border-5 shadow  rounded-3"
            style="max-width: 300px !important;
            max-height: 300px !important;"
            
             alt="img">
        </div>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">

        <input type="hidden" asp-for="ActorId">
        <div>
            <label>Actor AdÄ±:</label>
            <input class="form-control " type="text" asp-for="FirstName" required  />
        </div>

        <div>
            <label>Actor Soyad:</label>
            <input class="form-control" type="text" asp-for="LastName" required></input>
        </div>

        <div>
            <label>Actor Resim:</label>
            <input class="form-control" type="file" name="formImg"></input>
        </div>



        <button class="btn btn-success mt-1" type="submit">Kaydet</button>

    </form>
</div>


