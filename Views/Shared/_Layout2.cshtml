<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EFC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EFC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/css/tom-select.bootstrap5.min.css">
    @await RenderSectionAsync("css", false)
    
    @section css {
        <link rel="stylesheet" href="~/css/utility.css " asp-append-version="true">
    }   
    <style>

        

        body{color: white;}
        
        .vh-75{
            height: 65vh;
            width: 100%;
        }

.bg-main {
    background-image: url(/img/bg.jpg);
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    min-height: 100vh;
    width: 100%;
    background-attachment: fixed; /* Arka plan sabit kalır */
}


.blurred-bg {
    position: relative;
    height: 100vh;
    overflow-y: auto; /* İçeriği kaydırılabilir yap */
    padding: 20px;
}

.blurred-bg::before {
    content: '';
    position: fixed; /* Sayfa aşağı kayınca da blur kalır */
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    backdrop-filter: blur(10px);
    filter: blur(10px);
    z-index: -1;
}



                        .blurred-bg-2 {
            position: relative;
            /* Pseudo-element için gerekli */
            @* padding: 2rem; *@
            color: black;
            border-radius: 50px;
            /* Yazılar için katman ayarı */
            z-index: 1;
        }

        /* Arka plan blur efekti */
        .blurred-bg-2::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
                        @* border-radius: 150px; *@

            background: rgba(48, 46, 46, 0.5);  
            /* Yarı saydam beyaz */
            backdrop-filter: blur(12px);
            /* Modern tarayıcılar için */
            /* Fallback (Eski tarayıcılar için) */
            filter: blur(11px);
            z-index: -1;
            /* Yazıların altında kalmasını sağlar */
        }
    </style>
</head>

<body class="bg-main">
   <header>
